{% assign card_pages = site.pages['/'].children_in_list %}

<!-- =========={ MAIN }==========  -->
<main id="content">
  <div class="container mx-auto px-4 pt-16 pb-6">
    <div class="flex flex-wrap flex-row -mx-4">
      <!-- column -->
      <div class="flex-shrink mw-full w-full lg:w-1/5 px-4">
        <!--navigation-->
        <div class="mb-12 lg:mb-4 pb-12 lg:-ms-4 lg:-me-4 lg:pb-28 overflow-y-auto h-72 lg:h-screen mh-screen lg:fixed xl:pe-4 xl:w-56 border-e border-gray-200">
          <nav x-data="{selected:0}" class="relative flex flex-wrap items-center justify-between">
            <ul id="side-menu" class="w-full float-none flex flex-col">
              <turbo-frame
                  src="{{ site.nav_tree_path | append: '?selected_ids=' | append: page.id }}"
                  id="nav_tree"
              ></turbo-frame>
            </ul>
          </nav>
        </div>
      </div>

      <!-- column -->
      <div class="flex-shrink mw-full w-full lg:w-4/5 px-4">
        <turbo-frame id="main-content" data-turbo-action="advance" :class="col-12 col-lg-9 col-xl-8 px-md-3 ps-lg-5 pe-lg-4 pb-5">
          <!-- row -->
          <div class="flex flex-wrap flex-row justify-center -mx-4 text-center">
            {% for card_page in card_pages %}
              {% assign page_count = card_page.children_in_nav_menu | size %}
              <div class="flex-shrink w-11/12 max-w-full sm:w-1/2 lg:w-1/3 px-4">
                <div class="relative flex flex-col bg-white border border-gray-200 dark:bg-gray-800 dark:border-gray-700 mb-12 rounded-md overflow-hidden shadow hover:shadow-2xl transform transition duration-300 ease-in-out hover:-translate-y-2 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                  <div class="flex-1 p-5">
                    <a href="{{ card_page.path }}">
                      <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100">{{ card_page.link_text }}</h3>
                      <p class="text-gray-500">{{ page_count }} {{ 'generic.articles'| t}}</p>
                    </a>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div><!-- end row -->
        </turbo-frame>
      </div>
    </div>
  </div>
</main><!-- end main -->

{% schema %}
  {
    "name": "Documents List",
    "description": "home like list dictionary style",
    "thumb_url": "images/theme/index-docs.webp",
    "preview_image_urls": [
      "images/theme/index-docs.webp"
    ],
    "sub_page_templates": ["page"],
    "settings": [
        {
          "id": "slogan",
          "type": "text",
          "label": "站点首页口号",
          "default": "Frequently Asked Questions"
        },
        {
          "id": "description",
          "type": "text",
          "label": "站点首页一句话描述",
          "default": "👋 24 category sections snippet that you are ready to use to build your site."
        },
        {
          "id": "tags",
          "type": "tag_picker",
          "multiple": true,
          "label": "t:settings_schema.page.settings.tags.label",
          "info": "设置以后，标签列表会显示在首页搜索栏下方"
        }
      ]
  }
{% endschema %}

